{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Produits</h1>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('product_new') }}" class="btn btn-primary">Ajouter un produit</a>
        {% endif %}

        <table class="table table-striped mt-3">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.price }} â‚¬</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            <form method="POST" action="{{ path('product_delete', {'id': product.id}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce produit ?');">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </td>
                    {% endif %}
                    <a href="{{ path('products_export') }}" class="btn btn-success mt-3">Exporter en CSV</a>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
